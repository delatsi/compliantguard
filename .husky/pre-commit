#!/bin/sh
set -e

echo "ğŸ” Running pre-commit validation..."

# Make sure we're in project root
if [ ! -f "package.json" ] && [ ! -f "frontend/package.json" ]; then
  echo "âŒ Please run from project root directory."
  exit 1
fi

# Navigate to project root if needed
if [ -f "frontend/package.json" ] && [ ! -f "package.json" ]; then
  cd ..
fi

echo "ğŸ Running backend linting..."
if [ -d "backend" ] && [ -f "backend/main.py" ]; then
  # Check if Python tools are available
  if ! command -v python3 >/dev/null 2>&1; then
    echo "âŒ Python 3 not found. Please install Python 3."
    exit 1
  fi
  
  # Install Ruff if not available
  python3 -m pip install --quiet ruff 2>/dev/null || echo "Installing Ruff..."
  
  echo "  ğŸš€ Running ruff check (linting)..."
  python3 -m ruff check backend/ --fix-only
  
  echo "  ğŸ¨ Running ruff format (formatting)..."
  python3 -m ruff format backend/ --check
  
  echo "  âœ… Backend linting passed!"
else
  echo "  â­ï¸  No backend directory found, skipping backend linting."
fi

echo "ğŸ“¦ Installing frontend dependencies if needed..."
cd frontend
npm ci --prefer-offline --no-audit

echo "ğŸ§¹ Running ESLint..."
npm run lint

echo "ğŸ§ª Running tests..."
npm run test:run

echo "ğŸ—ï¸  Testing build..."
npm run build

cd ..
echo "âœ… All pre-commit checks passed!"
